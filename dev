def read_csv(file_path, orientated = False):
    with open(file_path, "r+", encoding="utf-8") as f:
        content = f.readlines()
    content = [i.strip().split(",")[:2] for i in content]
    edges = [[int(i.strip()) for i in line] for line in content]
    graph = {}
    for a, b in edges:
        if not orientated:
            if a not in graph:
                graph[a] = []
            if b not in graph:
                graph[b] = []
            graph[a].append(b)
            graph[b].append(a)
        else:
            if a not in graph:
                graph[a] = []
            graph[a].append(b)
    return graph

def hamilton_cycle():
    res=[]
    def hamilton(graf, size, pt, path=[]):
        if pt not in path:
            path.append(pt)
            if len(path)==size:
                res.append(path)
                return path
            for pt_next in graf[pt]:
                res_path = [i for i in path]
                hamilton(graf, size, pt_next, res_path)
    for i in list(graph.keys()):
        hamilton(graph, len(graph), i, [])
    if len(res)!=0:
        return res[0]
    return 'miss input, try again but with the new graph'

